<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.catalogo.ListProductosActivity">

    <!--navbar-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lycBotonesNavBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registrate"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--    Container-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/lycBotonesNavBar"
        android:background="@drawable/background_perfil">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/MsjBienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="113dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/Hola"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/PreguntaBienvenida"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/MsjBienvenida"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="211dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/search">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBuscarProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:lines="1" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_margin="12sp"
                app:srcCompat="@drawable/charm_search"
                android:layout_width="32dp"
                android:layout_height="32dp"
                />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--botones opciones-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/botones_opciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="290dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_opc_pollos"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Pollos"
                android:layout_margin="2dp"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:letterSpacing="0.1"
                android:backgroundTint="@color/main_rojo"
                android:layout_marginBottom="10dp"
                android:padding="12dp"
                app:cornerRadius="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_opc_parrillas"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Parrillas"
                android:layout_margin="2dp"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:letterSpacing="0.1"
                android:backgroundTint="@color/white"
                android:textColor="@color/main_rojo"
                android:padding="12dp"
                app:strokeColor="@color/main_rojo"
                app:strokeWidth="1dp"
                app:cornerRadius="10dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_opc_promociones"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Promociones"
                android:textSize="10sp"
                android:layout_margin="2dp"
                android:textAllCaps="false"
                android:letterSpacing="0.1"
                android:backgroundTint="@color/white"
                android:textColor="@color/main_rojo"
                android:padding="12dp"
                app:strokeColor="@color/main_rojo"
                app:strokeWidth="1dp"
                app:cornerRadius="10dp"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <!-- Card View -->

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/card_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/botones_opciones"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="360dp"
            android:layout_margin="20dp"

            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:listitem="@layout/item_producto"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>